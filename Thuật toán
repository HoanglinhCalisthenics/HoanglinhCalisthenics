#include <iostream> 
#include <math.h>
#include <iomanip>

using namespace std;

double giaiThua (int n){
    if (n==1){
        return 1;
    }
    if (n==0){
        return 1;
    }
    return n * giaiThua(n-1);
}

int main() {
    int x, n;
    double s=0;
    cin >> x >> n;
    for (int i=1; i<=n; i++){
        s += (pow(x, i))/giaiThua(i);
    }
    cout << setprecision(2) << fixed << s;
    return 0;
}
